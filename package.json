{
    "name": "igestant-api",
    "version": "0.0.20",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "jest --passWithNoTests --watch --silent --runInBand",
        "test:unit": "npm test -- --watch -c jest.unit.config.js",
        "test:integration": "npm test -- --watch -c jest.integration.config.js",
        "test:ci": "jest --passWithNoTests --runInBand --coverage --detectOpenHandles --forceExit",
        "test:verbose": "jest --passWithNoTests --detectOpenHandles",
        "test:related": "jest --passWithNoTests --findRelatedTests --runInBand --detectOpenHandles --forceExit",
        "start": "node src/index.js",
        "dev": "nodemon src/index.ts",
        "lint": "eslint --fix src/**/*.ts",
        "format": "prettier --write src/**/*.ts package.json",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint",
            "npm run test:related"
        ]
    },
    "devDependencies": {
        "@faker-js/faker": "^9.0.3",
        "@shelf/jest-mongodb": "^4.3.2",
        "@types/cors": "^2.8.17",
        "@types/debug": "^4.1.12",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/node": "^22.5.0",
        "@types/supertest": "^6.0.2",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^8.2.0",
        "@typescript-eslint/parser": "^8.2.0",
        "eslint": "^8.54.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.29.0",
        "husky": "^9.1.5",
        "jest": "^29.7.0",
        "lint-staged": "^12.3.2",
        "mongodb-memory-server": "^10.1.2",
        "nodemon": "^3.1.4",
        "prettier": "^3.1.0",
        "ts-jest": "^29.2.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dayjs": "^1.11.13",
        "debug": "^4.3.6",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "mongodb": "^6.9.0",
        "supertest": "^7.0.0",
        "uuid": "^10.0.0",
        "zod": "^3.23.8"
    }
}
