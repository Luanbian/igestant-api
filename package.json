        "eslint": "^8.54.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-import": "^2.29.0",
        "husky": "^9.1.5",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.9",
        "nodemon": "^3.1.4",
        "prettier": "^3.1.0",
        "ts-jest": "^29.2.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4"
    }
